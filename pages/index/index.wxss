.container {
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-items: flex-start;
  margin: 0;
  padding: 0;
  background-color: rgb(243, 243, 243);
}

.display {
  width: 100vw;
  background-color: rgba(235, 231, 231, 0.8)
}

.calc {
  position: relative;
}

.prev-result {
  height: 25vh;
  text-align: right;
  width: 100%;
  font-size: 100rpx;
}

.result {
  position: absolute;
  text-align: right;
  width: 100%;
  height: 200rpx;
  bottom: 0;
  font-size: 100rpx;
}

.step {
  height: 10vh;
  text-align: right;
  font-size: 45rpx;
  margin-top: 10rpx;
}

.btns {
  width: 100%;
  flex-direction: row;
  display: flex;

}

.btn-group {
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 100%;
  height: 100%;
}

.left-one {
  margin-left: 2rpx;
}

.right-one {
  margin-right: 2rpx;
}

.btn {
  width: 186rpx;
  display: flex;
  align-items: center;
  height: 150rpx;
  justify-content: center;
  border: 1rpx solid #DDDDDD;
  color: black;
  background-color: white;
  font-size: 60rpx;
}

.equal {
  height: 303rpx;
  color: orange;
}

.btn:active {
  background-color: red;
}

.red {
  background-color: orange;
  color: white;
}