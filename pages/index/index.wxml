<view class="container">
  <view class="display">
    <view class="calc">
      <view class="prev-result">{{prevResult}}</view>
      <view class="result">{{result}}</view>
    </view>
    <view class="step">
      {{step}}
    </view>
  </view>
  <view class="btns">
    <view class="btn-group left-one">
      <view class="btn red" bindtap="clear" data-value="AC">AC</view>
      <view class="btn" bindtap="click" data-value="7">7</view>
      <view class="btn" bindtap="click" data-value="4">4</view>
      <view class="btn" bindtap="click" data-value="1">1</view>
      <view class="btn" bindtap="operator" data-value="%">%</view>
    </view>
    <view class="btn-group">
      <view class="btn" bindtap="detel" data-value="DEL">DEL</view>
      <view class="btn" bindtap="click" data-value="8">8</view>
      <view class="btn" bindtap="click" data-value="5">5</view>
      <view class="btn" bindtap="click" data-value="2">2</view>
      <view class="btn" bindtap="click" data-value="0">0</view>
    </view>
    <view class="btn-group">
      <view class="btn" bindtap="operator" data-value="/">÷</view>
      <view class="btn" bindtap="click" data-value="9">9</view>
      <view class="btn" bindtap="click" data-value="6">6</view>
      <view class="btn" bindtap="click" data-value="3">3</view>
      <view class="btn" bindtap="click" data-value=".">.</view>
    </view>
    <view class="btn-group right-one">
      <view class="btn" bindtap="operator" data-value="×">×</view>
      <view class="btn" bindtap="operator" data-value="-">-</view>
      <view class="btn" bindtap="operator" data-value="+">+</view>
      <view class="btn equal" bindtap="equal" data-value="=">=</view>
    </view>
  </view>
</view>